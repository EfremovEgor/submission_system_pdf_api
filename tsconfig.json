{
  "compilerOptions": {
    "target": "es2022",                                 
    "module": "Node16",                              
    "esModuleInterop": true,                          
    "forceConsistentCasingInFileNames": true,          
    "strict": true,    
    "allowJs": true,
    "checkJs": false,
    "removeComments": true,
    "sourceMap": true,
    "rootDirs": ["src/"],
    "typeRoots": ["./node_modules/@types", "./typings"],
    "outDir": "dist",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "paths": {
      "@assets/*":["assets/*"],
      "@src/*":["src/*"]
    },
    "skipLibCheck": true,
                        
  }
}
